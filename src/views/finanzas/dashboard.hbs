<div class="container p-4">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col"> </th>
                        <th scope="col">ITEM</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each items}}
                    <tr>
                        <td>
                            <form action="/finanzas/delete/{{_id}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-block btn-sm"><i
                                        class="fas fa-trash-alt"></i></button>
                        <td>{{item.nombre}}</td>
                        <td>{{item.categoria}}</td>
                        <td>{{item.precio}}</td>
                        <td>{{cantidad}}</td>
                        <td>{{date}}</td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
            <a href="/finanzas/add_item" class="boton_personalizado">Añadir Item </a>
        </div>
        <div class="col-md-4">
            <div class="card mb-2">
                <div class="card-header bg-dark text-white">
                    <h5>
                        <i class="far fa-chart-bar"></i> Resumen
                    </h5>
                </div>
                <div class="card-body">
                    <p><i class="fas fa-euro-sign"></i> Precio Total: {{Resumen.precio_Total}}</p>
                    <p><i class="fas fa-shopping-bag"></i> Articulos: {{Resumen.articulos}}</p>
                    <p><i class="fas fa-eye"></i> Views: {{sidebar.stats.views}}</p>
                    <p><i class="fas fa-heart"></i> Likes: {{sidebar.stats.likes}}</p>
                </div>
            </div>
            <!-- Ultimos Articulos añadidos  -->
            <div class="card mb-2">

                <div class="card-header bg-dark text-white">
                    <h5>
                        <i class="fas fa-fire"></i> Últimos Articulos
                    </h5>
                </div>

                <div class="card-body">
                    <div class="row">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th scope="col"> </th>
                                    <th scope="col">ITEM</th>
                                    <th scope="col">Date</th>
                                </tr>
                            </thead>
                            <tbody>

                                {{#each Last_Articulos}}
                                <tr>
                                    <td>
                                        <form action="/finanzas/delete/{{_id}}?_method=DELETE" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-danger btn-block btn-sm"><i
                                                    class="fas fa-info-circle"></i></button>
                                    <td>{{item.nombre}}</td>
                                    <td>{{timeago date}}</td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>